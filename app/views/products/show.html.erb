<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> - <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% @reviews.each do |review| %>
      <%= render 'rating', rating: review.rating, description: review.description, user: review.user_id, user: review.user.name  %>


    <% end %>
    <br/><br/>

    <h2>Leave a Review:</h2>
    <%= form_for :review, url: "#{@product.id}/reviews}" do |f| %>
    <%= f.label :review %><br/>
    <%= f.text_area :body %><br/>
    <%= f.select :review, [1, 2, 3, 4, 5, 6] %><br/>
    <%= f.submit %><br/>
    <% end %>

  </article>

</section>
