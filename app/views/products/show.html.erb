<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> - <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>



    <% @reviews.each do |review| %>
      <%= render 'rating', rating: review.rating, description: review.description, user: review.user_id %>
    <% end %>



  </article>

</section>
